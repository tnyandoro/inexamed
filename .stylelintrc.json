{
    "extends": [
        "stylelint-config-standard",
        "plugin:react/recommended"
    ],
    "plugins": [
        "stylelint-scss",
        "stylelint-csstree-validator"
    ],
    "rules": {
        "react/prop-types": "off",
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen"
                ]
            }
        ],
        "scss/at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen"
                ]
            }
        ],
        "csstree/validator": true
    },
    "ignoreFiles": [
        "build/**",
        "dist/**",
        "**/reset*.css",
        "**/bootstrap*.css",
        "**/*.js",
        "**/*.jsx"
    ]
}